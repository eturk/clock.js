extend ../index
block content
  h2 Schedules
  h3 #{schedule.name}
  form(action='/schedules/#{schedule._id}/edit',method='post').schedule-item
    input(type='text',name='schedule[name]',value='#{schedule.name}')
    input(type='text',name='schedule[description]',value='#{schedule.description}')
    .submit-container
      input(type='submit',value='Save')
  table.periods
    thead
      tr
        th &#35;
        th Text
        th Times
        th Actions
    tbody
      - for (var i = 0; i < periods.length; ++i) {
          tr
            td= periods[i].number
            td= periods[i].text
            td= periods[i].start + ' - ' + periods[i].finish
            td
              <a href="/schedules/#{schedule._id}/periods/#{periods[i]._id}/edit">Edit</a> â€”
              <a href="/schedules/#{schedule._id}/periods/#{periods[i]._id}/delete">Delete</a>
      - }
  form(action='/schedules/#{schedule._id}/periods/create',method='post')#period-create
    input(type='text',name='period[number]',placeholder='#')
    input(type='text',name='period[text]',placeholder='Text')
    input(type='text',name='period[start]',placeholder='Start Time')
    input(type='text',name='period[finish]',placeholder='Finish Time')
    .submit-container
      input(type='submit',value='Save')