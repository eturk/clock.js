@import url("http://fonts.googleapis.com/css?family=Open\+Sans:400,300");

body {
	margin: 0; padding: 0;

	background-color: #2c3e50;
	background-image: url("/themes/wallpaper/active");
	background-repeat: none;

	font-family: "Open Sans";
	font-weight: 300;
	color: rgba(255,255,255, 0.8);
}

#wrapper {
	margin: 25px 3% 25px;
	overflow: hidden;
}

#marquee {
	background-color: rgba(0,0,0, 0.7);
	margin-top: 20px; padding: 8px 20px;
	border-radius: 3px;
}

#marquee ul {
	margin: 0; padding: 0;
	height: 40px;
	font-size: 36px;
}

#clock {
	width: 48%;
	float: right;

	text-align: center;

	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

#clock p {
	margin: 0; padding: 0;
}

#clock #date {
	margin-top: 40px;
	font-size: 40px;
	line-height: 1.5em;
}

#clock #time {
	margin-top: 60px;
	font-size: 80px;
}

#schedule {
	background-color: rgba(0,0,0, 0.7);
	width: 48%;

	float: left;
	overflow: hidden;
	font-size: 40px;

	border-radius: 4px;

	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

#schedule ol {
	margin: 0; padding: 0;
	list-style-type: none;
}

#schedule ol li {
	padding: 4px 20px;
}

#schedule ol li + li {
	border-top: 1px solid rgba(0,0,0,0.5);
}
