@import url("http://fonts.googleapis.com/css?family=Open\+Sans:400,300");
@import url("http://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100|Anonymous\+Pro");

body {
	margin: 0; padding: 0;

	background-color: #2c3e50;
	background-image: url("/wallpaper/active");
	background-repeat: none;

	font-family: "Roboto";
	font-weight: 700;
	color: white;
}

#wrapper {
	margin: 25px 3% 25px;
	overflow: hidden;
}

#marquee {
	background-color: rgba(51, 51, 51, 0.75);
	margin-top: 20px; padding: 8px 20px;
	border-radius: 3px;
}

#marquee ul {
	margin: 0; padding: 0;
	height: 40px;
	font-size: 36px;
}

#clock {
	width: 48%;
	float: right;

	text-align: center;
	text-shadow: 2px 2px 2px rgba(50, 50, 50, 0.8);

	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

#clock p {
	margin: 0; padding: 0;
}

#clock #date {
	margin-top: 40px;
	font-size: 40px;
	line-height: 1.5em;
}

#clock #time {
	margin-top: 60px;
	font-size: 80px;
}

#schedule {
	background-color: rgba(0,0,0, 0.7);
	width: 48%;

	float: left;
	overflow: hidden;
	color: black; font-size: 40px;

	border-radius: 2px;

	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

#schedule ol {
	margin: 0; padding: 0;
	list-style-type: none;
}

#schedule ol li {
	padding: 4px 20px;
	background: linear-gradient(#F0F0F0, #D2D2D2);
}

#schedule ol li + li {
	border-top: 1px solid rgba(0, 0, 0, 0.5);
}

#schedule ol li.active {
	background-color: rgba(0,0,0, 0.9);
}
