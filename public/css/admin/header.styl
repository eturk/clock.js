header {
	margin: 0; padding: 12px 0;

	background-color: rgb(81, 135, 135);
	color: white;
}
header #container {
	margin: auto; padding: 0 10%;
	max-width: 800px;
	overflow: hidden;
}
header a:hover {
	color: rgb(239, 239, 239);
}

header h1 {
	margin: 0; padding: 0;

	display: block;
	float: left;

	font-size: 18px;
	font-weight: 400;
}
header h1 a {
	color: white;
	text-decoration: none;
}

header nav {
	float: right;
}
header nav ul {
	margin: 0; padding: 0;
	list-style: none;
}
header nav li a {
	text-decoration: none;
	color: white;

	font-family: "Roboto";
	font-size: 14px;
}