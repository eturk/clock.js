nav {
	background-color: rgb(103, 164, 164);
}

nav .container {
	margin: auto; padding: 0 10%;
	max-width: 800px;
	overflow: hidden;
}

nav ul {
	margin: 0; padding: 10px 0;
	list-style-type: none;
	float: left;
	overflow: hidden;
}

nav ul li {
	float: left;
}

nav ul li a {
	margin: 5px 0;
	margin-right: 20px;
	display: block;

	color: white;
	font-size: 14px;
	text-decoration: none;
}

nav ul li a:hover {
	color: rgb(239, 239, 239);
}

#sign-out {
	margin-top: 15px;
	display: block;
	float: right;

	color: white;
	text-decoration: none;
}
#sign-out:hover {
	color: rgb(239, 239, 239);
}
